{
  "name": "opus-accumulator",
  "version": "1.0.2",
  "description": "Append Opus audio chunks from any browser into a growing, always-valid, never-rewritten .opus file in pure JavaScript. Without FFmpeg, WASM, or re-encoding",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsup": "^8.5.1",
    "typescript": "^4.9.5"
  },
  "keywords": [
    "opus",
    "ogg",
    "webm",
    "concatenate",
    "audio",
    "mediarecorder"
  ],
  "license": "0BSD",
  "author": "Chamie",
  "type": "module",
  "repository": "https://github.com/chamie/opus-accumulator",
  "bugs": "https://github.com/chamie/opus-accumulator/issues"
}
